{
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Click to view popup",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "offline_enabled": true,
  "minimum_chrome_version": "92",
  "omnibox": { "keyword": "la" },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "window.js", "content.js" ],
      "css": [ "style.css", "content.css" ],
      "run_at": "document_start"
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "web_accessible_resources": [
		{
			"resources":  ["content.html", "style.css"],
			"matches": ["<all_urls>"]
		}
	],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "description": "Lakca's toolkit.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 3,
  "name": "Bookmarks & Tabs Manager",
  "permissions": [
    "activeTab",
    "bookmarks",
    "contextMenus",
    "scripting",
    "tabs",
    "storage"
  ],
  "version": "1.0"
}
